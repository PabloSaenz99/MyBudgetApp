<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_l">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">This is the large title</item>
    </style>


    <style name="title_m">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">This is the medium title</item>
    </style>

    <style name="title_s">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">This is the small title</item>
    </style>

    <style name="info">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">Here some information will be displayed</item>
    </style>

    <style name="amount">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:text">30.15</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#686868</item>
    </style>

    <style name="HorizontalDividerTransparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
    </style>
</resources>